<Window x:Class="drogy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:event"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Stiskni mě" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
        Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Margin="0,0,0,20"
                 TextChanged="TextBox_TextChanged"/>
        <Button Content="Namiř na mě" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"
         MouseEnter="Button_MouseEnter"/>
        
    </Grid>
</Window>
